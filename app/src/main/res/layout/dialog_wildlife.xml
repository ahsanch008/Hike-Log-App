<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_card_round">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Wildlife Sighting"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#183A2A" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record what you spotted"
        android:textColor="#6B7C75"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animal Name"
        android:textColor="#183A2A"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/wildlife_animal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_input_round"
        android:hint="e.g., Deer, Eagle"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:textColor="#183A2A" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Species (optional)"
        android:textColor="#183A2A"
        android:textStyle="bold"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/wildlife_species"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_input_round"
        android:hint="Specific species"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:textColor="#183A2A" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textColor="#183A2A"
        android:textStyle="bold"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/wildlife_quantity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_input_round"
        android:hint="1"
        android:inputType="number"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:textColor="#183A2A" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes (optional)"
        android:textColor="#183A2A"
        android:textStyle="bold"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/wildlife_notes"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_input_round"
        android:hint="Any observations..."
        android:padding="12dp"
        android:gravity="top"
        android:layout_marginTop="8dp"
        android:textColor="#183A2A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_cancel_wildlife"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textStyle="bold"
            android:textColor="#183A2A"
            android:background="@drawable/bg_chip_light" />

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_submit_wildlife"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Add"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_primary" />
    </LinearLayout>

</LinearLayout>
