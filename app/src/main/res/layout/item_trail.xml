<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="18dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/difficulty_pill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="Easy"
        android:textColor="#2D8E6B"
        android:background="@drawable/bg_pill_easy" />

    <ImageView
        android:id="@+id/trail_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:background="@drawable/bg_image_round"
        android:src="@drawable/ic_logo_mountain" />

    <TextView
        android:id="@+id/trail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#183A2A"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_location"
            app:tint="#6B7C75" />
        <TextView
            android:id="@+id/trail_meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6B7C75"
            android:layout_marginLeft="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/chip_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KM"
            android:textStyle="bold"
            android:textColor="#2D8E6B"
            android:background="@drawable/bg_chip_light"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />
        <TextView
            android:id="@+id/value_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textColor="#183A2A"
            android:layout_marginLeft="6dp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_clock"
            app:tint="#2D8E6B"
            android:layout_marginLeft="16dp" />
        <TextView
            android:id="@+id/value_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0h 0m"
            android:textColor="#183A2A"
            android:layout_marginLeft="6dp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_mountain"
            app:tint="#2D8E6B"
            android:layout_marginLeft="16dp" />
        <TextView
            android:id="@+id/value_elev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0m"
            android:textColor="#183A2A"
            android:layout_marginLeft="6dp" />
    </LinearLayout>

</LinearLayout>
</com.google.android.material.card.MaterialCardView>
