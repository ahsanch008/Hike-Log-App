<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_card_round"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_soft"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_tree"
            app:tint="#2D8E6B" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/wildlife_animal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Deer"
                android:textStyle="bold"
                android:textColor="#183A2A" />

            <TextView
                android:id="@+id/wildlife_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x2"
                android:textColor="#6B7C75"
                android:textSize="12sp"
                android:background="@drawable/bg_chip_light"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/wildlife_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="White-tailed deer"
            android:textColor="#6B7C75"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/wildlife_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Near the creek"
            android:textColor="#183A2A"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_delete_wildlife"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_trash"
        android:background="@drawable/bg_circle_soft"
        app:tint="#B84C4C"
        android:layout_marginStart="8dp"
        android:contentDescription="Delete" />

</LinearLayout>
